#!/bin/bash

killall xcape
if [[ -n "$1" ]]; then
    setxkbmap $1
else
	layout=$(setxkbmap -query | awk 'FNR==3{print $2}')
	    case $layout in
		us)
			setxkbmap il -option "altwin:swap_alt_win"
			;;
		*)
			setxkbmap us -option "altwin:swap_alt_win"
			~/dotfiles/arch/scripts/bin/vim_keyboard_bindings
			;;
		esac
fi
