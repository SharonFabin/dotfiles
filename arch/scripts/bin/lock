# 	i3lock -u -i /tmp/screen.png
# }

VERSION=$((1 + $RANDOM % $LOCK_VERSIONS))
SELECTED_LOCK_FUNCTION="lock$VERSION"
$SELECTED_LOCK_FUNCTION

revert

